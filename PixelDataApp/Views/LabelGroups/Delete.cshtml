@model PixelDataApp.Models.LabelGroup

@{
    ViewData["Title"] = "Delete label group";
}

    <h1>Удалить группу</h1>

<h3>Вы уверены, что хотите удалить эту группу?</h3>
<div>
    <h4>Группа лейблов</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameRu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameRu)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
