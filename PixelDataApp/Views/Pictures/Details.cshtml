@model PixelDataApp.Models.Picture

@{
    ViewData["Title"] = "Details of picture";
}

<h1>Подробности фото</h1>

<div>
    <h4>Фото</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-12">
            <img src="/Pictures/Image?id=@Model.Id" alt="Фото недоступно" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filepath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filepath)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PublishTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PublishTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Info)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Info)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Answer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Answer.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
