@model PixelDataApp.Models.Picture

@{
    ViewData["Title"] = "Edit picture";
}

<h1>Изменить фото</h1>

<h4>Фото</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PublishTime" />
            <input type="hidden" asp-for="Filepath" />
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnswerId" class="control-label"></label>
                <select asp-for="AnswerId" class="form-control" asp-items="ViewBag.AnswerId"></select>
                <span asp-validation-for="AnswerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
